<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Define Maui.SplashTheme explicitly to enable light status bar (dark icons) on light background -->
  <style name="Maui.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Ensure status bar icons are dark (since background is white) -->
    <item name="android:windowLightStatusBar">true</item>
    <!-- Use the generated splash drawable as window background -->
    <item name="android:windowBackground">@drawable/maui_splash</item>
    <item name="android:windowSplashScreenAnimatedIcon">@drawable/maui_splash_image</item>
    <item name="android:windowSplashScreenAnimationDuration">200</item>
    <item name="android:windowSplashScreenBackground">#ffffff</item> 
    <item name="android:statusBarColor">#ffffff</item>
  </style>
</resources>
